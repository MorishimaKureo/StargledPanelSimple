<!DOCTYPE html>
<html>
<head>
    <title>Edit <%= file %> - File Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/global.css">
</head>
<body>
    <%- include('partials/sidebar', { page: page }) %>
    <%- include('partials/header') %>
    <div id="main-content">
        <h1>Edit File: <%= file %></h1>
        <form id="edit-form">
            <textarea id="file-content" name="content"><%= content %></textarea>
            <div class="actions">
                <button type="submit">Save</button>
                <a href="/filemanager" style="margin-left:10px;">Back to File Manager</a>
            </div>
        </form>
        <div id="status"></div>
    </div>
    <%- include('partials/footer') %>
    <script>
        document.getElementById('edit-form').addEventListener('submit', function(e) {
            e.preventDefault();
            fetch('/save', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    file: "<%= file.replace(/"/g, '\\"') %>",
                    content: document.getElementById('file-content').value
                })
            })
            .then(res => {
                if (res.ok) {
                    document.getElementById('status').textContent = 'Saved!';
                } else {
                    res.text().then(msg => document.getElementById('status').textContent = msg);
                }
            });
        });
    </script>
</body>
</html>